{
  "name": "proptech-admin",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter web dev",
    "dev:internal": "pnpm --filter internal-web dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r --if-present check-types",
    "knip": "knip",
    "db:push": "pnpm --filter @proptech-admin/db db:push",
    "db:studio": "pnpm --filter @proptech-admin/db db:studio",
    "db:generate": "pnpm --filter @proptech-admin/db db:generate",
    "db:migrate": "pnpm --filter @proptech-admin/db db:migrate",
    "prepare": "husky"
  },
  "dependencies": {
    "@proptech-admin/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@proptech-admin/config": "workspace:*",
    "@types/node": "^22.13.14",
    "husky": "^9.1.7",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.7",
    "only-allow": "^1.2.2",
    "typescript": "catalog:",
    "ultracite": "7.1.3"
  },
  "packageManager": "pnpm@10.28.2"
}
