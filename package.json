{
  "name": "proptech-admin",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",

    "dev:web": "pnpm --filter web dev",
    "dev:internal": "pnpm --filter internal-web dev",

    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",

    "db:push": "pnpm --filter @proptech-admin/db db:push",
    "db:studio": "pnpm --filter @proptech-admin/db db:studio",
    "db:generate": "pnpm --filter @proptech-admin/db db:generate",
    "db:migrate": "pnpm --filter @proptech-admin/db db:migrate"
  },
  "dependencies": {
    "@proptech-admin/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@proptech-admin/config": "workspace:*",
    "@types/node": "^22.13.14",
    "typescript": "catalog:",
    "ultracite": "7.1.3"
  },
  "packageManager": "pnpm@10.28.2"
}
