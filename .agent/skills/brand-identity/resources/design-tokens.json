{
  "meta": {
    "brand_name": "Proptech Admin",
    "description": "Core design tokens for UI implementation based on Brand Guidelines version 1.0."
  },
  "colors": {
    "primary": {
      "DEFAULT": "#4F46E5",
      "tailwind": "indigo-600",
      "foreground": "#FFFFFF"
    },
    "secondary": {
      "DEFAULT": "#0F172A",
      "tailwind": "slate-900",
      "foreground": "#F8FAFC"
    },
    "accent": {
      "DEFAULT": "#10B981",
      "tailwind": "emerald-500",
      "foreground": "#FFFFFF"
    },
    "background": {
      "light": "#F8FAFC",
      "dark": "#020617",
      "tailwind_light": "slate-50",
      "tailwind_dark": "slate-950"
    },
    "card": {
      "light": "#FFFFFF",
      "dark": "#0F172A",
      "tailwind_light": "white",
      "tailwind_dark": "slate-900"
    },
    "border": {
      "light": "#E2E8F0",
      "dark": "#1E293B",
      "tailwind_light": "slate-200",
      "tailwind_dark": "slate-800"
    },
    "subtle": {
      "light": "#F1F5F9",
      "dark": "#1E293B",
      "tailwind_light": "slate-100",
      "tailwind_dark": "slate-800"
    },
    "disabled": {
      "light": "#CBD5E1",
      "dark": "#334155",
      "tailwind_light": "slate-300",
      "tailwind_dark": "slate-700"
    }
  },
  "typography": {
    "font_family_primary": ["Inter", "sans-serif"],
    "font_family_mono": ["JetBrains Mono", "monospace"],
    "scale": {
      "h1": { "size": "36px", "line_height": "1.2", "weight": "600" },
      "h2": { "size": "24px", "line_height": "1.3", "weight": "500" },
      "h3": { "size": "18px", "line_height": "1.4", "weight": "500" },
      "body": { "size": "16px", "line_height": "1.5", "weight": "400" },
      "small": { "size": "14px", "line_height": "1.5", "weight": "400" },
      "tiny": { "size": "12px", "line_height": "1.4", "weight": "500" }
    }
  },
  "ui": {
    "spacing": {
      "base": "4px",
      "scale": [
        "4px",
        "8px",
        "12px",
        "16px",
        "24px",
        "32px",
        "48px",
        "64px",
        "96px"
      ]
    },
    "border_radius": {
      "small": "4px",
      "medium": "8px",
      "large": "16px",
      "full": "9999px"
    },
    "shadows": {
      "color": "slate-tinted",
      "levels": ["sm", "md", "lg"]
    },
    "motion": {
      "curve": "cubic-bezier(0.4, 0, 0.2, 1)",
      "duration": {
        "micro": "150ms",
        "complex": "250ms-300ms"
      }
    }
  }
}
